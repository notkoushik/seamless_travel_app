<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
    =================================================
    LIGHT MODE THEME (Base)
    =================================================
    -->
    <style name="Base.Theme.SeamlessTravelApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary (Button) Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary (Page Background) -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Background (App Background) -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>

        <!-- Surface (Card Background) -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Navigation bar color (Handled by v27) -->
        <item name="android:navigationBarColor">?attr/colorSecondary</item>
    </style>

    <style name="Theme.SeamlessTravelApp" parent="Base.Theme.SeamlessTravelApp" />

    <!-- Custom Card Style for Light Mode -->
    <style name="Widget.App.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/gray_200</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>
</resources>