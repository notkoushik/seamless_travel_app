<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSecondary"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header (from Header.tsx) -->
        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_aviation"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_airplane"
                android:background="@drawable/white_circle_bg"
                android:padding="8dp"
                app:tint="?attr/colorPrimary"
                android:contentDescription="App Logo" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tv_greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome, Traveler!"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LAX Terminal 3"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person"
                android:padding="8dp"
                app:tint="@color/white"
                android:contentDescription="Profile" />
        </LinearLayout>

        <!-- Main Content Area -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/header_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- ProPass Card (from SmartPathCard.tsx) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_propass_enroll"
                style="@style/Widget.App.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_shield"
                            app:tint="?attr/colorPrimary"
                            android:contentDescription="ProPass Icon" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="ProPass"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Enrolled"
                            android:background="@drawable/badge_background"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textColor="@color/success_foreground"
                            android:backgroundTint="@color/success"
                            android:alpha="0.3"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Skip the lines with expedited security screening"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp" />

                    <!-- Step Icons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:baselineAligned="false">

                        <!-- FIX: Added ID 'btn_scan_passport_icon' -->
                        <LinearLayout
                            android:id="@+id/btn_scan_passport_icon"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackgroundBorderless">
                            <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_scan" app:tint="?attr/colorPrimary" android:background="@drawable/icon_bg_circle" android:padding="8dp" android:contentDescription="Scan Passport"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Scan Passport" android:textSize="12sp" android:layout_marginTop="4dp" android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>

                        <!-- FIX: Added ID 'btn_take_selfie_icon' -->
                        <LinearLayout
                            android:id="@+id/btn_take_selfie_icon"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackgroundBorderless">
                            <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_person" app:tint="?attr/colorPrimary" android:background="@drawable/icon_bg_circle" android:padding="8dp" android:contentDescription="Take Selfie"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Take Selfie" android:textSize="12sp" android:layout_marginTop="4dp" android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>

                        <!-- FIX: Added ID 'btn_fast_track_icon' -->
                        <LinearLayout
                            android:id="@+id/btn_fast_track_icon"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackgroundBorderless">
                            <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_clock" app:tint="?attr/colorPrimary" android:background="@drawable/icon_bg_circle" android:padding="8dp" android:contentDescription="Fast Track"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fast Track" android:textSize="12sp" android:layout_marginTop="4dp" android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_start_verification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Enroll in ProPass" />

                    <Button
                        android:id="@+id/btn_flight_registration"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Flight Registration"
                        android:textColor="?attr/colorPrimary"
                        app:strokeColor="?attr/colorPrimary" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions (from QuickActions.tsx) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_quick_actions"
                style="@style/Widget.App.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:padding="16dp">

                    <Button
                        android:id="@+id/btn_baggage_tracking"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Baggage"
                        android:textColor="?attr/colorOnSurface"
                        android:drawableTop="@drawable/ic_luggage"
                        android:padding="12dp"
                        app:drawableTint="?attr/colorPrimary" /> <!-- Changed to drawableTint -->

                    <Button
                        android:id="@+id/btn_find_gate"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Find Gate"
                        android:textColor="?attr/colorOnSurface"
                        android:drawableTop="@drawable/ic_map_pin"
                        android:padding="12dp"
                        app:drawableTint="?attr/colorPrimary" /> <!-- Changed to drawableTint -->

                    <Button
                        android:id="@+id/btn_live_chat"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Live Chat"
                        android:textColor="?attr/colorOnSurface"
                        android:drawableTop="@drawable/ic_chat"
                        android:padding="12dp"
                        app:drawableTint="?attr/colorPrimary" /> <!-- Changed to drawableTint -->

                </GridLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

