<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".WalletFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Enrollment Complete!"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- This ConstraintLayout is the main boarding pass template -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boarding_pass_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wallet_background"
        android:elevation="8dp"
        android:padding="20dp">

        <!-- Top Section: Logo, Airline Name, and Class -->
        <ImageView
            android:id="@+id/airline_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Airline Logo"
            android:src="@drawable/ic_airplane"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/wallet_airline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Unknown Airline"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/airline_logo"
            app:layout_constraintEnd_toStartOf="@id/wallet_class"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/airline_logo"
            app:layout_constraintTop_toTopOf="@id/airline_logo"
            app:layout_constraintVertical_bias="0.428" />

        <TextView
            android:id="@+id/wallet_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ECONOMY"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/airline_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/airline_logo" />

        <!-- From and To Section -->
        <TextView
            android:id="@+id/wallet_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="BOM"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/airline_logo" />

        <ImageView
            android:id="@+id/flight_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Route icon"
            android:src="@android:drawable/ic_menu_send"
            app:layout_constraintBottom_toBottomOf="@id/wallet_from"
            app:layout_constraintEnd_toStartOf="@id/wallet_to"
            app:layout_constraintStart_toEndOf="@id/wallet_from"
            app:layout_constraintTop_toTopOf="@id/wallet_from" />

        <TextView
            android:id="@+id/wallet_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JFK"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/wallet_from" />

        <!-- Separator -->
        <View
            android:id="@+id/separator"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wallet_from" />

        <!-- Passenger and Flight Details -->
        <TextView
            android:id="@+id/label_passenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="PASSENGER"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator" />

        <TextView
            android:id="@+id/wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KUCHANA / BHASKAR"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_passenger" />

        <TextView
            android:id="@+id/label_flight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FLIGHT"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/label_passenger" />

        <TextView
            android:id="@+id/wallet_flight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI119"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_flight" />

        <!-- Seat and Gate Details -->
        <TextView
            android:id="@+id/label_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="SEAT"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wallet_name" />

        <TextView
            android:id="@+id/wallet_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="41A"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_seat" />

        <TextView
            android:id="@+id/label_gate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GATE"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/label_seat" />

        <TextView
            android:id="@+id/wallet_gate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="66"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_gate" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start_over_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Start Over" />

        <!--
          MODIFICATION:
          Set explicit width/height to match the vector drawable size.
          Set scaleType to fitCenter to ensure it scales correctly.
        -->
        <ImageButton
            android:id="@+id/add_to_google_wallet_button"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Add to Google Wallet"
            android:src="@drawable/google_wallet_button" />

    </LinearLayout>

</LinearLayout>

