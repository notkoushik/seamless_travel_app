<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
    =================================================================
    DARK MODE THEME
    This file tells the app how to look when the phone is in Dark Mode.
    =================================================================
    -->
    <style name="Base.Theme.SeamlessTravelApp" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary (Button) Colors - Stays the same as light mode -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary (Page Background) - Use a dark color -->
        <item name="colorSecondary">@color/background_dark</item>
        <item name="colorOnSecondary">@color/on_background_dark</item>

        <!-- Background (App Background) - Use a dark color -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>

        <!-- Surface (Card Background) - Use a slightly lighter dark color -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_dark</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Navigation bar color (Handled by v27) -->
        <item name="android:navigationBarColor">?attr/colorSecondary</item>
    </style>

    <!-- Custom Card Style for Dark Mode -->
    <style name="Widget.App.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/border_dark</item>
    </style>
</resources>